@{
    ViewBag.Title = "CreateList";
}

<h2>CreateList</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<hr />
<input type="submit" value="登録" />
<table class="table">
    <tr>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>メールアドレス（確認）</th>
        <th>誕生日</th>
    </tr>
    @for (var i = 0; i < 5; i++)
    {
        // 仮引数名[番号].プロパティ名
        var key = $"list[{i}].";
    <tr>
        <td>@Html.TextBox(key + "Name")</td>
        <td>@Html.TextBox(key + "Email")</td>
        <td>@Html.TextBox(key + "EmailConfirmed")</td>
        <td>@Html.TextBox(key + "Birth")</td>
    </tr>
    }
</table>
}
