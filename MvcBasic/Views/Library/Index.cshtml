@{
    ViewBag.Title = "Library";
}

<h2>Library</h2>


<div id="books">
    <p><img src="@Url.Content("~/Content/Imgs/1orange.png")" class="other" width="100" height="100" /></p>
    <p><img src="@Url.Content("~/Content/Imgs/2orange.png")" width="100" height="100" /></p>
    <p><img src="@Url.Content("~/Content/Imgs/3orange.png")" class="other" width="100" height="100" /></p>
    <p><img src="@Url.Content("~/Content/Imgs/4orange.png")" width="100" height="100" /></p>
    <p><img src="@Url.Content("~/Content/Imgs/5orange.png")" class="other" width="100" height="100" /></p>
</div>

@section scripts
{
    <script>

        // フェードアウトからのフェードイン
        $(function () {
            $('#books img.other')
                .fadeOut(3000)
                .fadeIn(3000);
        });

        // クリックした画像をフェードアウト
        $(function() {
            $('img').click(function(e) {
                $(this).fadeOut(3000);
            });
        });

    </script>
}
